

<h2><%= @restaurant.name %></h2>
<p><%= @restaurant.address %></p>
<p><%= @restaurant.phone_number %></p>
<p><%= @restaurant.category %></p>

<br>
<p><strong>Restaurant Reviews</strong></p>
<ul>
<% @restaurant.reviews.each do |review| %>
<li><strong>Review: </strong><%=review.content %> </li>
<li> <strong>Rating: </strong><%=review.rating %> </li>

<% end %>
</ul>
<br>

<%= link_to "back home", restaurants_path, class: "btn btn-primary" %>

<%= link_to "add review", new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>
